<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".FeelingActivity">



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm Feeling ..."
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:textColor="#FFFF"/>

        <Button
            android:id="@+id/button_happy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="😃 Happy"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/black"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/button_sad"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="😢 Sad"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/black"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/button_angry"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="😡 Angry"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/black"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/button_lovely"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="❤️ Lovely"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/black"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/button_anxious"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="😰 Anxious"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/black"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
